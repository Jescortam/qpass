<%- layout('layouts/boilerplate') %>
  <header class="m-4">
    <h1 class="text-center">Bienvenido, <%= `${adminUser.firstName} ${adminUser.lastName}` %>
    </h1>
  </header>
  <hr>
  <div class="my-5">
    <div class="d-flex justify-content-evenly">
      <% if (adminUser.isBusiness) { %>
        <a href="/usuarios" class="card col-3 p-3">
          <img src="imgs/usuarios.png" class="card-img-top" alt="Ícono de usuario" />
          <div class="body">
            <div class="btn btn-primary btn-lg w-100">Usuarios</div>
          </div>
        </a>
        <% } %>
          <a href="/tarjetas" class="card col-3 p-3">
            <img src="imgs/tarjetas.png" class="card-img-top" alt="Ícono de tarjeta" />
            <div class="body">
              <div class="btn btn-primary btn-lg w-100">Tarjetas</div>
            </div>
          </a>
          <a href="/vehiculos" class="card col-3 p-3">
            <img src="imgs/vehiculos.jpg" class="card-img-top my-4" alt="Ícono de vehiculo" />
            <div class="body">
              <div class="btn btn-primary btn-lg w-100">Vehículos</div>
            </div>
          </a>
    </div>
  </div>